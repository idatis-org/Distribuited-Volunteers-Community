{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@idatis/idatis-ui": ["dist/libs/idatis-ui"],
      "@idatis/idatis-ui/loader": [
        "dist/libs/idatis-ui/loader"
      ],
      "@idatis/idatis-ui/*": [
        "dist/libs/idatis-ui/dist/components/*"
      ],
      "@idatis/idatis-ui-angular": [
        "libs/idatis-ui-angular/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
